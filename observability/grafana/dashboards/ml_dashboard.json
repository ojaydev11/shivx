{
  "dashboard": {
    "id": null,
    "uid": "ml-ops-dashboard",
    "title": "ShivX MLOps Dashboard",
    "tags": ["ml", "mlops", "trading"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Prediction Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(ml_predictions_total[5m])",
            "legendFormat": "{{model_id}} - {{prediction_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Predictions/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Prediction Latency (P95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ml_prediction_latency_seconds_bucket[5m]))",
            "legendFormat": "{{model_id}} - P95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Prediction Latency",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "title": "Model Accuracy",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "ml_model_accuracy",
            "legendFormat": "{{model_id}} - {{metric_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Accuracy", "min": 0, "max": 1},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Data Drift Score",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "ml_drift_score",
            "legendFormat": "{{model_id}} - {{feature}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Drift Score"},
          {"format": "short"}
        ],
        "thresholds": [
          {
            "value": 0.25,
            "colorMode": "critical",
            "fill": true,
            "line": true,
            "op": "gt"
          }
        ]
      },
      {
        "id": 5,
        "title": "Prediction Count by Model",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(ml_predictions_total) by (model_id)",
            "legendFormat": "{{model_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 6,
        "title": "Average Latency",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "avg(ml_prediction_latency_seconds)",
            "legendFormat": "Avg Latency",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "unit": "s"
        }
      },
      {
        "id": 7,
        "title": "Cache Hit Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(ml_cache_hits_total[5m]) / rate(ml_predictions_total[5m])",
            "legendFormat": "Cache Hit Rate",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "unit": "percentunit"
        }
      },
      {
        "id": 8,
        "title": "Model Health Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "ml_model_health_score",
            "legendFormat": "{{model_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 70, "color": "yellow"},
              {"value": 90, "color": "green"}
            ]
          }
        }
      }
    ]
  }
}

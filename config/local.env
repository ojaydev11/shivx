# Local Development Configuration
SHIVX_ENV=local
SHIVX_DEV=true
SHIVX_DEBUG=false
SHIVX_RELOAD=true

# Server
SHIVX_HOST=127.0.0.1
SHIVX_PORT=8000

# Security (insecure for local dev)
SHIVX_SKIP_AUTH=false
SHIVX_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# Database (SQLite for local)
SHIVX_DATABASE_URL=sqlite:///./data/shivx_local.db
SHIVX_DB_ECHO=true

# Trading (paper mode for safety)
SHIVX_TRADING_MODE=paper
SHIVX_MAX_POSITION_SIZE=100

# ML/AI (CPU for local)
SHIVX_USE_GPU=false
SHIVX_TORCH_DEVICE=cpu
SHIVX_BATCH_SIZE=16

# Monitoring
SHIVX_LOG_LEVEL=DEBUG
SHIVX_JSON_LOGGING=false

# Feature Flags (all enabled for testing)
SHIVX_FEATURE_ADVANCED_TRADING=true
SHIVX_FEATURE_SENTIMENT_ANALYSIS=true
SHIVX_FEATURE_RL_TRADING=true

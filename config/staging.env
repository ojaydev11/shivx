# Staging Environment Configuration
SHIVX_ENV=staging
SHIVX_DEV=false
SHIVX_DEBUG=false
SHIVX_RELOAD=false

# Server
SHIVX_HOST=0.0.0.0
SHIVX_PORT=8000
SHIVX_WORKERS=4

# Security
SHIVX_SKIP_AUTH=false
SHIVX_CORS_ORIGINS=https://staging.shivx.ai
SHIVX_TRUSTED_HOSTS=staging.shivx.ai,*.shivx.ai

# Database (PostgreSQL)
SHIVX_DATABASE_URL=postgresql://shivx:PASSWORD@staging-db:5432/shivx
SHIVX_DB_POOL_SIZE=10
SHIVX_DB_ECHO=false

# Redis
SHIVX_REDIS_URL=redis://staging-redis:6379/0

# Trading (paper mode in staging)
SHIVX_TRADING_MODE=paper
SHIVX_MAX_POSITION_SIZE=500

# ML/AI (GPU if available)
SHIVX_USE_GPU=true
SHIVX_TORCH_DEVICE=cuda
SHIVX_BATCH_SIZE=64

# Monitoring
SHIVX_LOG_LEVEL=INFO
SHIVX_JSON_LOGGING=true
SHIVX_ENABLE_METRICS=true
SHIVX_OTEL_ENABLED=true

# Feature Flags
SHIVX_FEATURE_ADVANCED_TRADING=true
SHIVX_FEATURE_SENTIMENT_ANALYSIS=true
SHIVX_FEATURE_RL_TRADING=true
SHIVX_FEATURE_GUARDRAILS=true
SHIVX_FEATURE_GUARDIAN_DEFENSE=true

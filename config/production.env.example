# Production Environment Configuration Template
# COPY THIS FILE AND FILL IN ACTUAL VALUES
# NEVER commit actual production.env to version control

SHIVX_ENV=production
SHIVX_DEV=false
SHIVX_DEBUG=false
SHIVX_RELOAD=false

# Server
SHIVX_HOST=0.0.0.0
SHIVX_PORT=8000
SHIVX_WORKERS=8

# Security - CRITICAL: CHANGE THESE!
SHIVX_SECRET_KEY=<GENERATE_WITH_python_-c_"import_secrets;_print(secrets.token_urlsafe(32))">
SHIVX_JWT_SECRET=<GENERATE_WITH_python_-c_"import_secrets;_print(secrets.token_urlsafe(32))">
SHIVX_SKIP_AUTH=false
SHIVX_CORS_ORIGINS=https://app.shivx.ai,https://dashboard.shivx.ai
SHIVX_TRUSTED_HOSTS=shivx.ai,*.shivx.ai
SHIVX_RATE_LIMIT_PER_MINUTE=120

# Database (PostgreSQL with SSL)
SHIVX_DATABASE_URL=postgresql://shivx_prod:STRONG_PASSWORD@prod-db:5432/shivx?sslmode=require
SHIVX_DB_POOL_SIZE=20
SHIVX_DB_POOL_TIMEOUT=30
SHIVX_DB_ECHO=false

# Redis (with password)
SHIVX_REDIS_URL=redis://prod-redis:6379/0
SHIVX_REDIS_PASSWORD=REDIS_PASSWORD_HERE

# Trading - START WITH PAPER MODE!
SHIVX_TRADING_MODE=paper
SHIVX_JUPITER_API_URL=https://quote-api.jup.ag/v6
SHIVX_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SHIVX_MAX_POSITION_SIZE=5000
SHIVX_STOP_LOSS_PCT=0.03
SHIVX_TAKE_PROFIT_PCT=0.08

# ML/AI (GPU recommended)
SHIVX_MODEL_DIR=/var/shivx/models
SHIVX_USE_GPU=true
SHIVX_TORCH_DEVICE=cuda
SHIVX_BATCH_SIZE=128
SHIVX_LEARNING_RATE=0.0001

# Monitoring
SHIVX_LOG_LEVEL=INFO
SHIVX_LOG_FILE=/var/log/shivx/shivx.log
SHIVX_JSON_LOGGING=true
SHIVX_ENABLE_METRICS=true
SHIVX_METRICS_PORT=9090

# Distributed Tracing
SHIVX_OTEL_ENABLED=true
SHIVX_OTEL_EXPORTER_ENDPOINT=http://jaeger:4317

# Error Tracking
SHIVX_SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID

# Feature Flags (carefully enable in production)
SHIVX_FEATURE_ADVANCED_TRADING=true
SHIVX_FEATURE_SENTIMENT_ANALYSIS=true
SHIVX_FEATURE_RL_TRADING=false  # Disable until fully tested
SHIVX_FEATURE_DEX_ARBITRAGE=true
SHIVX_FEATURE_METACOGNITION=true
SHIVX_FEATURE_GUARDRAILS=true
SHIVX_FEATURE_GUARDIAN_DEFENSE=true

# External APIs (optional)
SHIVX_OPENAI_API_KEY=sk-...
SHIVX_ANTHROPIC_API_KEY=sk-ant-...
SHIVX_COINGECKO_API_KEY=...

# Devnet Trading Configuration
# This file configures the system to use Solana Devnet for safe testing

# Trading Mode: devnet | mainnet | paper
TRADING_MODE=devnet

# Solana Network Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# Wallet Configuration (will be generated if not exists)
DEVNET_WALLET_PATH=data/wallets/devnet_trading_wallet.json

# Jupiter API Configuration (Devnet endpoints)
JUPITER_API_BASE=https://quote-api.jup.ag/v6
JUPITER_DEVNET_MODE=true

# Trading Parameters (more aggressive for testing)
MIN_PROFIT_PCT=0.02
MAX_POSITION_SIZE_USD=10
CYCLE_INTERVAL_SECONDS=15

# Safety Limits (devnet)
MAX_DAILY_TRADES=1000
MAX_DAILY_LOSS_USD=100

# Devnet Token Addresses (Solana Devnet)
# These are devnet versions of tokens
DEVNET_SOL=So11111111111111111111111111111111111111112
DEVNET_USDC=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU
DEVNET_USDT=EJwZgeZrdC8TXTQbQBoL6bfuAnFUUy1PVCMB4DYPzVaS

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/devnet_trading.log

# Feature Flags
ENABLE_TRANSACTION_CONFIRMATION=true
ENABLE_BALANCE_CHECKS=true
ENABLE_SLIPPAGE_PROTECTION=true
CONFIRM_TIMEOUT_SECONDS=60

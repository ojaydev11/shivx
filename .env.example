# ============================================================================
# ShivX AI Trading System - Environment Configuration Template
# ============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control - it's in .gitignore
# ============================================================================

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------

# Environment (local, staging, production)
SHIVX_ENV=local

# Application version (auto-set in CI/CD)
SHIVX_VERSION=dev

# Git commit SHA (auto-set in CI/CD)
SHIVX_GIT_SHA=unknown

# Development mode (true/false) - enables verbose logging
SHIVX_DEV=true

# ----------------------------------------------------------------------------
# Security & Authentication
# ----------------------------------------------------------------------------

# CRITICAL SECURITY: Secret key for encryption
# This MUST be a cryptographically secure random string in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(48))"
# MINIMUM 32 chars, RECOMMENDED 48+ chars for production/staging
# NEVER commit the actual secret to version control!
SHIVX_SECRET_KEY=GENERATE_YOUR_OWN_SECRET_KEY_DO_NOT_USE_THIS_PLACEHOLDER

# CRITICAL SECURITY: JWT secret for API authentication
# This MUST be DIFFERENT from SHIVX_SECRET_KEY above
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(48))"
# MINIMUM 32 chars, RECOMMENDED 48+ chars for production/staging
# NEVER reuse the same secret for multiple purposes!
SHIVX_JWT_SECRET=GENERATE_YOUR_OWN_JWT_SECRET_DIFFERENT_FROM_ABOVE

# Session timeout in seconds (default: 86400 = 24 hours)
SHIVX_SESSION_TIMEOUT=86400

# API key for external services (if applicable)
SHIVX_API_KEY=your_api_key_here

# CORS allowed origins (comma-separated, use * for development only)
# Production example: https://app.example.com,https://dashboard.example.com
SHIVX_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate limiting (requests per minute)
SHIVX_RATE_LIMIT_PER_MINUTE=60

# ----------------------------------------------------------------------------
# Demo/Test Credentials (ONLY for demo purposes, NOT for production)
# ----------------------------------------------------------------------------

# Demo username for security hardening demo
SHIVX_DEMO_USERNAME=demo_user

# Demo password for security hardening demo
# MUST meet security requirements: 12+ chars, uppercase, lowercase, digit, special char
SHIVX_DEMO_PASSWORD=Demo!Pass@2024#Secure

# Test credentials (used in test suite via conftest.py)
# MUST meet security requirements: 12+ chars, uppercase, lowercase, digit, special char
SHIVX_TEST_USERNAME=test_user_fixture
SHIVX_TEST_PASSWORD=Test!Pass@2024#Secure

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------

# Database URL (SQLite default for local development)
# PostgreSQL example: postgresql://user:password@localhost:5432/shivx
# TimescaleDB example: postgresql://user:password@localhost:5432/shivx_timeseries
SHIVX_DATABASE_URL=sqlite:///./data/shivx.db

# Database connection pool size
SHIVX_DB_POOL_SIZE=5

# Database pool timeout (seconds)
SHIVX_DB_POOL_TIMEOUT=30

# ----------------------------------------------------------------------------
# Redis Configuration (for caching and rate limiting)
# ----------------------------------------------------------------------------

# Redis URL
SHIVX_REDIS_URL=redis://localhost:6379/0

# Redis password (if required)
SHIVX_REDIS_PASSWORD=

# Redis connection timeout (seconds)
SHIVX_REDIS_TIMEOUT=5

# ----------------------------------------------------------------------------
# Trading Configuration
# ----------------------------------------------------------------------------

# Jupiter DEX API endpoint (Solana)
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Solana RPC endpoint
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Trading mode (paper/live) - ALWAYS use 'paper' for testing!
SHIVX_TRADING_MODE=paper

# Maximum position size (in USD)
SHIVX_MAX_POSITION_SIZE=1000

# Stop loss percentage (0.05 = 5%)
SHIVX_STOP_LOSS_PCT=0.05

# Take profit percentage (0.10 = 10%)
SHIVX_TAKE_PROFIT_PCT=0.10

# Wallet private key (CRITICAL: NEVER commit this!)
# For testing, use a testnet wallet with no real funds
SOLANA_WALLET_PRIVATE_KEY=

# ----------------------------------------------------------------------------
# AI/ML Configuration
# ----------------------------------------------------------------------------

# Model checkpoint directory
SHIVX_MODEL_DIR=./models/checkpoints

# Enable GPU acceleration (true/false)
SHIVX_USE_GPU=false

# TensorFlow log level (0=ALL, 1=INFO, 2=WARNING, 3=ERROR)
TF_CPP_MIN_LOG_LEVEL=2

# PyTorch device (cpu/cuda/mps)
TORCH_DEVICE=cpu

# ML model serving endpoint (if using separate serving service)
ML_SERVING_URL=http://localhost:8501

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------

# Enable/disable specific features
# Format: SHIVX_FEATURE_<FEATURE_NAME>=true/false

# Enable advanced AI trading strategies
SHIVX_FEATURE_ADVANCED_TRADING=true

# Enable sentiment analysis
SHIVX_FEATURE_SENTIMENT_ANALYSIS=true

# Enable reinforcement learning
SHIVX_FEATURE_RL_TRADING=true

# Enable DEX arbitrage detection
SHIVX_FEATURE_DEX_ARBITRAGE=true

# Enable metacognition and self-reflection
SHIVX_FEATURE_METACOGNITION=true

# Enable guardrails and safety checks
SHIVX_FEATURE_GUARDRAILS=true

# Enable intrusion detection (Guardian Defense)
SHIVX_FEATURE_GUARDIAN_DEFENSE=true

# ----------------------------------------------------------------------------
# Monitoring & Observability
# ----------------------------------------------------------------------------

# Prometheus metrics port
SHIVX_METRICS_PORT=9090

# Enable metrics collection (true/false)
SHIVX_ENABLE_METRICS=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
SHIVX_LOG_LEVEL=INFO

# Log file path
SHIVX_LOG_FILE=./logs/shivx.log

# Log rotation size (in MB)
SHIVX_LOG_MAX_SIZE_MB=100

# Number of log backups to keep
SHIVX_LOG_BACKUP_COUNT=5

# JSON logging (true/false) - recommended for production
SHIVX_JSON_LOGGING=true

# Distributed tracing (OpenTelemetry)
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Sentry DSN for error tracking
SENTRY_DSN=

# ----------------------------------------------------------------------------
# Cloud Provider Configuration (AWS)
# ----------------------------------------------------------------------------

# AWS credentials (for ECS deployment, S3 storage, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# S3 bucket for model artifacts
AWS_S3_MODEL_BUCKET=shivx-models

# ECS cluster name
AWS_ECS_CLUSTER=shivx-production

# ECS service name
AWS_ECS_SERVICE=shivx-trading-service

# ----------------------------------------------------------------------------
# Notification & Alerting
# ----------------------------------------------------------------------------

# Slack webhook for notifications
SLACK_WEBHOOK_URL=

# Email configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=alerts@shivx.ai

# PagerDuty integration key (for critical alerts)
PAGERDUTY_INTEGRATION_KEY=

# ----------------------------------------------------------------------------
# External API Keys
# ----------------------------------------------------------------------------

# OpenAI API key (for LLM features)
OPENAI_API_KEY=

# Anthropic API key (for Claude integration)
ANTHROPIC_API_KEY=

# CoinGecko API key (for market data)
COINGECKO_API_KEY=

# Twitter/X API credentials (for sentiment analysis)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=

# ----------------------------------------------------------------------------
# Performance & Resource Limits
# ----------------------------------------------------------------------------

# Maximum concurrent workers
SHIVX_MAX_WORKERS=4

# Request timeout (seconds)
SHIVX_REQUEST_TIMEOUT=30

# Memory limit (in MB, for monitoring)
SHIVX_MEMORY_LIMIT_MB=2048

# CPU limit (number of cores, for monitoring)
SHIVX_CPU_LIMIT=4

# ----------------------------------------------------------------------------
# Development & Testing
# ----------------------------------------------------------------------------

# Enable debug mode (adds extra logging and dev tools)
DEBUG=false

# DANGER: Skip authentication (ONLY for local development, NEVER in production!)
# Setting this to true completely bypasses all authentication checks
# BLOCKED automatically in production and staging environments
# Use ONLY for local development and testing
# Default: false (authentication enabled)
SHIVX_SKIP_AUTH=false

# Use mock data instead of live market data
USE_MOCK_DATA=false

# Pytest configuration
PYTEST_VERBOSE=true

# ============================================================================
# SECURITY CHECKLIST BEFORE DEPLOYING TO PRODUCTION
# ============================================================================
# [ ] Changed SHIVX_SECRET_KEY to a strong random value
# [ ] Changed SHIVX_JWT_SECRET to a strong random value
# [ ] Updated SHIVX_CORS_ORIGINS to specific domains (no wildcards)
# [ ] Set SHIVX_ENV=production
# [ ] Set SHIVX_DEV=false
# [ ] Set DEBUG=false
# [ ] Set SKIP_AUTH=false
# [ ] Verified all API keys are valid and have appropriate permissions
# [ ] Configured proper database with backups
# [ ] Set up monitoring and alerting
# [ ] Reviewed and adjusted rate limits
# [ ] Configured HTTPS/TLS certificates
# [ ] Set SHIVX_TRADING_MODE=paper initially, then live after thorough testing
# ============================================================================

# ----------------------------------------------------------------------------
# Privacy and Compliance Configuration
# ----------------------------------------------------------------------------

# Offline mode - blocks all external HTTP requests (except localhost)
# Use for true air-gapped operation or data privacy
# Options: true, false
SHIVX_OFFLINE_MODE=false

# Air-gap mode - maximum network isolation, fails startup if network detected
# Even more restrictive than offline mode
# Options: true, false
SHIVX_AIRGAP_MODE=false

# Telemetry collection mode
# Options: disabled, minimal, standard, full
# - disabled: No telemetry collection
# - minimal: Only errors and critical events
# - standard: Errors + performance metrics (recommended)
# - full: All events including usage (dev/testing only)
SHIVX_TELEMETRY_MODE=standard

# Respect Do Not Track (DNT) HTTP header
# Options: true, false
SHIVX_RESPECT_DNT=true

# Enable GDPR compliance features
# Options: true, false
SHIVX_GDPR_MODE=true

# Data retention periods (in days)
SHIVX_DATA_RETENTION_DAYS=90
SHIVX_CONVERSATION_RETENTION_DAYS=90
SHIVX_MEMORY_RETENTION_DAYS=365
SHIVX_AUDIT_LOG_RETENTION_DAYS=90
SHIVX_TELEMETRY_RETENTION_DAYS=30

# Enable automatic purging of expired data
# Options: true, false
SHIVX_AUTO_PURGE_ENABLED=true

# ----------------------------------------------------------------------------
# Memory & RAG Configuration
# ----------------------------------------------------------------------------

# Vector Database Settings
# Path to store ChromaDB vector database
SHIVX_VECTOR_DB_PATH=./data/chroma

# Embedding model for semantic search
# Options: all-MiniLM-L6-v2 (default, fast), all-mpnet-base-v2 (accurate)
SHIVX_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Long-term Memory Settings
# Path to store long-term memories
SHIVX_MEMORY_STORAGE_PATH=./var/memory/long_term

# Enable encryption for sensitive memories
# Options: true, false
SHIVX_MEMORY_ENCRYPTION_ENABLED=true

# Maximum memory storage size in GB (0 = unlimited)
SHIVX_MEMORY_MAX_SIZE_GB=10

# Conversation Memory Settings
# Path to store conversation sessions
SHIVX_CONVERSATION_STORAGE_PATH=./var/memory/conversations

# Default session timeout in minutes
SHIVX_CONVERSATION_TIMEOUT_MINUTES=60

# RAG (Retrieval-Augmented Generation) Settings
# Maximum context tokens for RAG pipeline
SHIVX_RAG_MAX_CONTEXT_TOKENS=4000

# Number of memory retrievals for RAG
SHIVX_RAG_NUM_RETRIEVALS=10

# Minimum relevance score for RAG context (0.0-1.0)
SHIVX_RAG_MIN_RELEVANCE_SCORE=0.3

# Enable RAG hallucination detection
# Options: true, false
SHIVX_RAG_HALLUCINATION_CHECK=true

# Privacy & Consent Settings
# Privacy manager storage path
SHIVX_PRIVACY_STORAGE_PATH=./var/privacy

# Require explicit user consent for memory storage
# Options: true, false
SHIVX_REQUIRE_MEMORY_CONSENT=true

